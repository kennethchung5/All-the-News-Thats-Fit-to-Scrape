

{{#each articles}}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-9">
                    <a href={{this.url}} target="_blank">
                        <h5 class="card-title">{{this.headline}}</h5>
                    </a>
                </div>

                <div class="col-3">
                    <a href="#" class="commentsButton btn btn-primary" data-articleID={{this._id}}>Comments</a>
                    <a href="#" class="saveButton btn btn-primary" data-articleID={{this._id}}>Save Article</a>
                    <a href="#" class="deleteButton btn btn-danger" data-articleID={{this._id}}>Delete Article</a>
                </div>
            </div>  
            <p class="card-text"><small class="text-muted">{{this.author}}</small></p>
            <p class="card-text">{{this.summary}}</p>    
        </div>  
    </div>
{{/each}}